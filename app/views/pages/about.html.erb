<main role="main" class="inner cover">
 <div class="app-card-container">
   <div class="card">
     <h1 class="cover-heading cover-block text-left">About Me</h1>

     <div class="row">
       <div class="col-md-4">
         <%= image_tag "profile.jpg", width: '100%', alt: "Profile Image of Dane Verrtah"%>

         <div class="skills">
          <% @skills.each do |skill| %>
             <div class="skill">
               <h4><%= skill.title %></h4>
               <div class="progress">
                 <div
                 class="progress-bar bg-warning"
                 role="progressbar"
                 aria-valuenow="<%= skill.percent_utilized %>"
                 aria-valuemax="100"
                 style="width: <%= skill.percent_utilized %>%"
                 ></div>
               </div>
             </div>
           <% end %>
         </div>
       </div>
       <div class="col-md-8 text-left">
         <p class="lead">Find us in the Web</p>
         <p>
           <button
           class="btn btn-primary"
           type="button"
           data-toggle="collapse"
           data-target="#jobHistory"
           aria-expanded="false"
           aria-controler="jobHistory"
           >
             Job History
           </button>

           <button
           class="btn btn-primary"
           type="button"
           data-toggle="collapse"
           data-target="#education"
           aria-expanded="false"
           aria-controler="education"
           >
             Education
           </button>

           <button
           class="btn btn-primary"
           type="button"
           data-toggle="collapse"
           data-target="#service"
           aria-expanded="false"
           aria-controler="service"
           >
             Service
           </button>

           <button
           class="btn btn-primary"
           type="button"
           data-toggle="collapse"
           data-target="#skills"
           aria-expanded="false"
           aria-controler="skills"
           >
             Skills
           </button>
         </p>

         <p>
           <div class="collapse" id="jobHistory">
             <div class="card card-block">
               <p>Job 1</p>
             </div>
             <div class="card card-block">
               <p>Job 2</p>
             </div>
           </div>

           <div class="collapse" id="education">
             <div class="card card-block">
              <p>School 1</p>
             </div>
             <div class="card card-block">
               <p>School 2</p>
             </div>
              <div class="card card-block">
               <p>School 3</p>
             </div>
           </div>

           <div class="collapse" id="service">
             <div class="card card-block">
              <p>Volunteering 1</p>
             </div>
             <div class="card card-block">
               <p>Volunteering 2</p>
             </div>
              <div class="card card-block">
               <p>Volunteering 3</p>
             </div>
           </div>
         </p>
         <p>
           <div class="collapse" id="skills">
             <div class="card card-block">
              <p>Skill 1</p>
             </div>
             <div class="card card-block">
               <p>Skill 2</p>
             </div>
              <div class="card card-block">
               <p>Skill 3</p>
             </div>
           </div>
         </p>




       </div>
     </div>
   </div>
 </div>
</main>